<header>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="d-flex justify-content-between">
          <h4 class="mb-2">尋找餐廳：</h4>
          <a href="/restaurants/new">
            <button type="button" class="mb-2 tn btn-med btn-danger">新增餐廳</button>
          </a>
        </div>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      <div class="row row-cols-sm-3">
        {{!-- 搜尋餐廳名稱時的顯示 --}}
        {{#each restaurants}}
        <div class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            {{!-- 編輯、詳細資訊、刪除按鈕 --}}
            <div class="btn-group d-flex justify-content-end" role="group" aria-label="Basic outlined example">
              <a href="/restaurants/{{this._id}}/edit">
                <button type="button" class="btn">Edit</button>
              </a>

              <a href="/restaurants/{{this._id}}">
                <button type="button" class="btn">Detail</button>
              </a>

              <form action="./restaurants/{{this._id}}/delete" method="POST" style="display: inline">
                <button type="submit" class="btn btn-delete btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>


        </div>
        {{/each}}

        {{!-- 搜尋類別時的資料顯示 --}}
        {{#each restaurantCategory}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>
        </a>
        {{/each}}
      </div>

    </div>
  </div>
</div>